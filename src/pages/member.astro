---
import Navbar from '../components/Navbar.astro';
import Layout from '../layouts/Layout.astro';
import ProfileCardBtnImg from '../components/ProfileCardBtnImg.astro';
import Showcase from '../components/Showcase.astro'

const Profiles = await Astro.glob('../members/*.md');
---

<Layout title="AAF law member profiles">
  <Navbar 
  showcase={false}
  />
 <Showcase title="The Team"/>
 <div class="row-between-2">
  {Profiles.map(profile => (
      <ProfileCardBtnImg 
      title={profile.frontmatter.title}
      picture={profile.frontmatter.picture}
      body={profile.frontmatter.excerpt}
      href={`/${profile.frontmatter.slug}`}
      />
      
    ))}
 </div>
    
  

</Layout>